// general test config
cc_defaults {
    name: "libmediautils_tests_config",

    host_supported: true,

    cflags: [
        "-Wall",
        "-Werror",
        "-Wextra",
    ],

    sanitize: {
        undefined: true,
        misc_undefined: [
            "float-divide-by-zero",
            "local-bounds",
        ],
        integer_overflow: true,
        cfi: true,
        memtag_heap: true,
        diag: {
            undefined: true,
            misc_undefined: [
                "float-divide-by-zero",
                "local-bounds",
            ],
            integer_overflow: true,
            cfi: true,
            memtag_heap: true,
        },
    },
    target: {
        host: {
            sanitize: {
                cfi: false,
                diag: {
                    cfi: false,
                },
            },
        },
    },
}

cc_defaults {
    name: "libmediautils_tests_defaults",

    defaults: ["libmediautils_tests_config"],

    host_supported: true,

    shared_libs: [
        "libbinder",
        "liblog",
        "libmediautils",
        "libutils",
    ],
}

cc_test_library {
    name: "libsharedtest",

    defaults: ["libmediautils_tests_defaults"],

    srcs: [
        "sharedtest.cpp",
    ],
}

