        "audioeffect_tests.cpp",
    ],
}

cc_test {
    name: "audioeffect_analysis",
    defaults: ["libaudioclient_gtests_defaults"],
    // flag needed for pfft/pffft.hpp
    cflags: [
        "-Wno-error=unused-parameter",
